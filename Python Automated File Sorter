import os
import shutil
folder_path = r"C:\Users\Volkan\Desktop\Sasha"
FILE_TYPES = {
    'Images': ['.jpeg', '.jpg', '.png', '.gif', '.bmp'],
    'Documents': ['.docx', '.txt', '.xlsx', '.pptx'],
    'PDF': ['.pdf'],
    'Screenshots': ['.png', '.jpg'],  # Сюда добавляем расширения для скриншотов
}
for category in FILE_TYPES.keys():
    category_folder = os.path.join(folder_path, category)
    if not os.path.exists(category_folder):
        os.makedirs(category_folder)

for filename in os.listdir(folder_path):
    file_path = os.path.join(folder_path, filename)
    if os.path.isdir(file_path):
        continue
    file_extension = os.path.splitext(filename)[1].lower()
    moved = False
    for category, extensions in FILE_TYPES.items():
        if file_extension in extensions:
            destination_folder = os.path.join(folder_path, category)
            shutil.move(file_path, os.path.join(destination_folder, filename))
            moved = True
            break
    if not moved:
        print(f"File '{filename}' does not fit known categories and will remain in place.")
print("Sorting completed.")
